<?xml version="1.0"?>
<ruleset name="Jisly coding standard">
    <description>Jisly coding standard</description>

    <arg value="p"/>
    <arg name="colors"/>

    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <file>src</file>
</ruleset>