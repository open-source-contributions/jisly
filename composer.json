{
  "name": "r0mdau/jisly",
  "description": "Light NoSQL database, JSON file data storing",
  "type": "library",
  "license": "Apache-2.0",
  "homepage": "https://github.com/r0mdau/jisly",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "malukenho/docheader": "^0.1.7",
    "phpstan/phpstan": "^0.9.2",
    "phpstan/phpstan-strict-rules": "^0.9.0",
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Jisly\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JislyTest\\": "test/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@license-check",
      "@cs-check",
      "@test",
      "@phpstan"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "phpstan": "phpstan analyze -l max -c phpstan.neon ./src",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "license-check": "docheader check src/ test/"
  }
}
